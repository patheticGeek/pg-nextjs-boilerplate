    "react-dom": "17.0.2",
    "twind": "^0.16.16"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^11.0.1",
    "@types/node": "^15.6.2",
    "@types/react": "17.0.14",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
